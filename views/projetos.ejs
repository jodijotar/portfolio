<%- include('partials/header') %>

<div class="container mt-5 pt-5">
    <h1 class="text-center mb-5">Meus Projetos</h1>
    
    <div class="row">
        <% portfolio.projetos.forEach(projeto => { %>
            <div class="col-lg-6 mb-4">
                <div class="card h-100" style="background-color: rgba(73, 246, 38, 0.05); border: 1px solid rgba(73, 246, 38, 0.3);">
                    <div class="card-body">
                        <h4 class="card-title">
                            <a href="<%= projeto.link %>"><%= projeto.nome %></a>
                        </h4>
                        <h6 class="card-subtitle mb-2 text-muted"><%= projeto.empresa %></h6>
                        <p class="card-text periodo"><%= projeto.periodo %></p>
                        <p class="card-text"><%- projeto.descricao %></p>
                        <a href="<%= projeto.link %>" class="btn" style="background-color: rgba(73, 246, 38, 0.5); color: white;">Ver no GitHub</a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
    
    <div class="mt-5">
        <h3 class="text-center mb-4">Ferramentas e Tecnologias Utilizadas</h3>
        <div class="row greenText p-4">
            <div class="col-md-6">
                <h5>Desenvolvimento</h5>
                <ul class="list-unstyled">
                    <li>JavaScript/TypeScript</li>
                    <li>Python</li>
                    <li>React</li>
                    <li>Node.js</li>
                    <li>Flask e Django</li>
                </ul>
            </div>
            <div class="col-md-6">
                <h5>DevOps e Segurança</h5>
                <ul class="list-unstyled">
                    <li>Git/GitHub</li>
                    <li>Docker</li>
                    <li>AWS</li>
                    <li>Pentest</li>
                    <li>Análise de vulnerabilidades</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
